<%- include("partials/header") %>

<section class="relative z-10">
  <div class="mx-auto max-w-2xl rounded-[28px] border border-white/10 bg-white/5 p-10 text-center backdrop-blur-2xl">
    <p class="text-xs uppercase tracking-[0.3em] text-white/50">Response received</p>
    <h2 class="mt-3 text-3xl font-semibold">Thank you for responding</h2>
    <p class="mt-2 text-sm text-white/60">The sender will be notified shortly.</p>
    <div
      class="mx-auto mt-6 inline-flex items-center gap-2 rounded-full border border-white/10 bg-black/40 px-4 py-2 text-xs uppercase tracking-[0.2em] text-white/70"
    >
      <span
        class="h-2.5 w-2.5 rounded-full <%= invite.status === 'accepted' ? 'bg-emerald-400' : 'bg-red-400' %>"
      ></span>
      <span>You responded: <%= invite.status %></span>
    </div>
  </div>
</section>

<%- include("partials/footer") %>

