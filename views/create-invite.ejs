<%- include("partials/header") %>

<section class="relative z-10">
  <div class="mx-auto max-w-3xl rounded-[28px] border border-white/10 bg-white/5 p-8 backdrop-blur-2xl sm:p-10">
    <div class="flex items-start justify-between gap-6">
      <div>
        <p class="text-xs uppercase tracking-[0.3em] text-white/50">Create Request</p>
        <h2 class="mt-2 text-3xl font-semibold">Send a secret invite</h2>
        <p class="mt-3 text-sm text-white/60">
          You are inviting <strong><%= student.name %></strong> (#<%= student.rollNumber %>).
          Your name stays anonymous until they say yes.
        </p>
      </div>
      <div class="hidden sm:flex flex-col gap-2 text-xs text-white/50">
        <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1">Respect-first</span>
        <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1">Kind energy</span>
        <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1">Keep it real</span>
      </div>
    </div>

    <div class="mt-6 rounded-2xl border border-white/10 bg-black/40 p-4">
      <h4 class="text-sm font-semibold">Make it feel personal</h4>
      <p class="mt-1 text-xs text-white/60">
        Short and specific works best. Mention a shared class, vibe, or tiny detail.
      </p>
    </div>

    <form class="mt-8 space-y-6" action="/invites" method="POST">
      <input type="hidden" name="studentId" value="<%= student._id %>" />

      <div class="rounded-2xl border border-white/10 bg-black/40 p-5">
        <label class="text-sm font-semibold text-white/90">
          Personal message / pickup line
          <textarea
            name="message"
            rows="4"
            required
            placeholder="Write something sweet, clever, or bold."
            class="mt-3 w-full border-0 border-b border-white/20 bg-transparent px-1 pb-2 text-sm text-white placeholder:text-white/40 focus:border-[#ff0055] focus:outline-none"
          ></textarea>
        </label>
        <p class="mt-2 text-xs text-white/50">Aim for 1-3 sentences. Make it sound like you.</p>
      </div>

      <div class="grid gap-4 sm:grid-cols-2">
        <div class="rounded-2xl border border-white/10 bg-black/40 p-5">
          <label class="text-sm font-semibold text-white/90">
            Juicy question #1
            <input
              type="text"
              name="q1"
              placeholder="Ex: If we were in a movie, which scene would we be in?"
              class="mt-3 w-full border-0 border-b border-white/20 bg-transparent px-1 pb-2 text-sm text-white placeholder:text-white/40 focus:border-[#ff0055] focus:outline-none"
            />
          </label>
          <p class="mt-2 text-xs text-white/50">Open-ended = more interesting replies.</p>
        </div>

        <div class="rounded-2xl border border-white/10 bg-black/40 p-5">
          <label class="text-sm font-semibold text-white/90">
            Juicy question #2
            <input
              type="text"
              name="q2"
              placeholder="Ex: Your favorite late-night snack?"
              class="mt-3 w-full border-0 border-b border-white/20 bg-transparent px-1 pb-2 text-sm text-white placeholder:text-white/40 focus:border-[#ff0055] focus:outline-none"
            />
          </label>
          <p class="mt-2 text-xs text-white/50">Keep it short and playful.</p>
        </div>
      </div>

      <button
        class="w-full rounded-full bg-gradient-to-r from-[#ff0055] to-[#7000ff] px-6 py-3 text-sm font-semibold text-white shadow-[0_0_30px_rgba(255,0,85,0.35)] transition hover:shadow-[0_0_45px_rgba(255,0,85,0.5)]"
        type="submit"
      >
        Send Anonymous Confession
      </button>
    </form>
  </div>
</section>

<%- include("partials/footer") %>

