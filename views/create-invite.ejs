<%- include("partials/header") %>

<section class="panel glass-panel">
  <div class="flex items-center justify-between gap-4">
    <div>
      <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Anonymous confession</p>
      <h2 class="mt-2 text-2xl font-semibold text-[#c8ccd4]">Create request</h2>
    </div>
    <div class="text-right text-sm text-slate-400">
      For <strong class="text-slate-200"><%= student.name %></strong>
      <span class="block text-xs">#<%= student.rollNumber %></span>
    </div>
  </div>
  <p class="mt-4 text-sm text-slate-300">
    Your name will stay anonymous. Be kind, be playful, and be unforgettable.
  </p>

  <form class="form" action="/invites" method="POST">
    <input type="hidden" name="studentId" value="<%= student._id %>" />

    <div class="question-card">
      <label>
        Personal message / pickup line
        <textarea
          name="message"
          rows="4"
          required
          class="textarea-field"
          placeholder="Write something sweet, clever, or bold."
        ></textarea>
      </label>
    </div>

    <div class="question-card">
      <label>
        Fun question #1
        <input
          type="text"
          name="q1"
          class="input-field"
          placeholder="Ex: If we were in a movie, which scene would we be in?"
        />
      </label>
    </div>

    <div class="question-card">
      <label>
        Fun question #2
        <input
          type="text"
          name="q2"
          class="input-field"
          placeholder="Ex: Your favorite late-night snack?"
        />
      </label>
    </div>

    <button class="btn btn-primary" type="submit">Send Anonymous Confession</button>
  </form>
</section>

<%- include("partials/footer") %>

